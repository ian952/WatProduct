doctype html
html
  head
    title #{title} - Wat-Product
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/custom.css', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='js/bootstrap.min.js')
    script(type='text/javascript').
      $('#PageRefresh').click(function() {
        location.reload();
      });

  body(align='center')
      h1
        |WAT-Product
      form(name="product-name", method="post")  
        input#userInput.form-control(onclick='this.setSelectionRange(0, this.value.length)', type='text', value='Please enter a product', name='product_name')
        .dynamicTextBox(id='inputButton', type='submit', value='add', text-inactive='Enter' text-active='Click!', data-toggle='modal', data-target='#myModal')
      
       #myModal.portfolio-modal.modal.fade(role='dialog')
        .modal-content
          .modal-header
            |Result on #{product}
          .modal-body
            p 
              |Sentiment towards #{product} is #{scoreout}


